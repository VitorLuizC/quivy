{
  "name": "quivy",
  "version": "0.0.1",
  "description": "A micro-framework to quicky start your games and animations.",
  "main": "./quivy.js",
  "scripts": {
    "build:webpack": "webpack ./src/index.js ./dist/quivy.js --output-library-target var --output-library quivy",
    "build:babel": "babel ./dist/quivy.js --presets es2015 -o ./dist/quivy.js",
    "build:uglify": "uglifyjs ./dist/quivy.js -o ./dist/quivy.min.js",
    "build": "npm run build:webpack & npm run build:babel & npm run build:uglify"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/VitorLuizC/quivy.git"
  },
  "author": "Vitor Luiz Cavalcanti <vitorluizc@outlook.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/VitorLuizC/quivy/issues"
  },
  "homepage": "https://github.com/VitorLuizC/quivy#readme",
  "devDependencies": {
    "babel-cli": "^6.22.2",
    "babel-preset-es2015": "^6.22.0",
    "uglify-js": "^2.7.5",
    "webpack": "^2.2.1"
  }
}
